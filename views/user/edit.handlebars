<div class="container">
	<div class="row">
		<form id="edit-form" class="col-md-6 col-md-offset-3" name="edit">
			<div class="panel panel-primary">
				<div class="panel-heading">
					<h2 class="form-edit-heading">Edit your information</h2>
				</div>
				<div class="panel-body">
					<!-- N A M E -->
					<div class="control-group form-group col-md-12">
						<label>Your full name</label>
						<input type="text" class="form-control" value="{{me.name}}" name="name">
					</div>

					<!-- E M A I L -->
					<div class="control-group form-group col-md-12">
						<label>Your email address</label>
						<input type="email" class="form-control" value="{{me.email}}" name="email">
					</div>

					<div class="control-group form-group col-md-12">
						<button class="btn btn-primary btn-lg btn-block btnEditInfo" type="submit">
							<span>Update information</span>
						</button>
					</div>

					<input type="hidden" name="_csrf" value="{{_csrf}}" />
					<input type="hidden" name="userId" value="{{me.id}}" />
				</div>
			</div>
		</form>
	</div>
</div>
